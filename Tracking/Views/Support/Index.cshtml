@model List<SupportWithTimeDifference>
<a href="~/Support/CreateSupport"><button type="button" class="btn btn-success">Yeni Çağrı</button></a>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Müşteri ad soyad</th>
            <th scope="col">Başlangıç Zamanı</th>
            <th scope="col">Bitiş Zmaanı</th>
            <th scope="col">Konu</th>
            <th scope="col">Durum</th>
            <th scope="col">Zaman</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.CustomerFullName</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.Subject</td>
                    <td>@item.Status</td>
                    <td>@item.Time</td>
                </tr>
            }
        }
    </tbody>
</table>